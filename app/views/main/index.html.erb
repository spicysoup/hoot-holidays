<div class="container main-container">
  <h1>Welcome to Hoot Holiday!</h1>
  <div class="container">
    <div class="row">
      <div class="col-sm-4">
        <%= form_with url: search_path, method: :get, remote: true, html: {class: ''} do |form| %>

          <div class="form-group flights-search-form mx-auto">
            <div class="container">
              <div class="row d-flex align-items-center">
                <div class="col-sm-4 text-right">
                  <%= form.label :dep, 'Departure:' %>
                </div>
                <div class="col-sm-8">
                  <%= form.text_field :dep, label: 'Departure', placeholder: 'Search', data: {behavior: 'autocomplete'}, class: 'form-control' %>
                </div>
              </div>

              <div class="row d-flex align-items-center">
                <div class="col-sm-4 text-right">
                  <%= form.label :arr, 'Arrival:' %>
                </div>
                <div class="col-sm-8">
                  <%= form.text_field :arr, label: 'Departure', placeholder: 'Search', data: {behavior: 'autocomplete'}, class: 'form-control' %>
                </div>
              </div>

              <div class="row d-flex align-items-center">
                <div class="col-sm-4 text-right">
                </div>
                <div class="col-sm-8">
                  <%= form.submit 'Search', class: 'btn btn-info form-control ml-0' %>
                </div>
              </div>


            </div>
          </div>
        <% end %>

      </div>
      <div class="col-sm-8">
        Flights
        <div id="search-results"></div>
      </div>
    </div>
  </div>
</div>