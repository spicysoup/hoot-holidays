<%= render partial: 'main/nav' %>

<div class="container carrier-maintenance">
  <% if flash[:carrier_message] %>
    <div class="row flash-message">
      <div class="col-lg-12 text-center">
        <h1><%= flash[:carrier_message] %></h1>
      </div>
    </div>
  <% end %>
  <%= simple_form_for @carrier, url: carrier_path(@carrier.id == nil ? 0 : @carrier.id), method: 'put' do |f| %>
    <div class="row">
      <div class="col-lg-8 carrier-code">
        <%= f.input :iata_code, label: false, as: :string, placeholder: 'Type IATA code to search' %>
      </div>
      <div class="col-lg-4">
        <div class="text-left">
          <%= f.submit 'SEARCH', name: 'search', class: 'btn btn-info mx-auto' %>
        </div>
      </div>
    </div>
    <hr>
    <div class="row">
      <div class="col-lg-12">
        <div class="container">
          <%= f.input :name, label: 'Name:', as: :string %>
          <%= f.input :alliance, label: 'Alliance:', as: :string %>
          <%= f.input :logo, label: 'Logo image URL:', as: :string %>
          <%= f.input :id, as: :hidden %>
          <div class="text-center">
            <%= f.submit 'UPDATE', class: 'btn btn-info mx-auto' %>
          </div>
        </div>
      </div>
    </div>
  <% end %>
</div>